<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="taskClassesTable"
        messagesPack="com.company.scrumit.web.taskclass">
    <data readOnly="true">
        <collection id="taskClassesDc"
                    class="com.company.scrumit.entity.TaskClass"
                    view="_local">
            <loader id="taskClassesDl">
                <query>
                    <![CDATA[select e from scrumit_TaskClass e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="taskClassesTable"
            spacing="true">
        <filter id="filter"
                applyTo="taskClassesTable"
                dataLoader="taskClassesDl">
            <properties include=".*"/>
        </filter>
        <dataGrid id="taskClassesTable"
                  width="100%"
                  dataContainer="taskClassesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column property="name"/>
                <column property="localizedName" caption="msg://localized_name"/>
                <column property="averageDurationHours"/>
            </columns>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="taskClassesTable.create"/>
                <button id="editBtn" action="taskClassesTable.edit"/>
                <button id="removeBtn" action="taskClassesTable.remove"/>
            </buttonsPanel>
        </dataGrid>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
