<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.scrumit.web.screens.taskclass">
    <data>
        <instance id="taskClassDc"
                  class="com.company.scrumit.entity.TaskClass"
                  view="taskClass-full">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="taskClassDc">
            <column width="250px">
                <textField id="nameField" property="name"/>
                <textField id="averageDurationHoursField" property="averageDurationHours"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
