<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.company.scrumit.web.task.workflow.frame.TaskWorkflowBrowseTableFrame"
        messagesPack="com.company.scrumit.web.task.workflow.frame"
        wf:actions="trackerTable"
        xmlns:wf="http://schemas.groupstp.com/wf/0.1/wf-schema.xsd">
    <dsContext>
        <hierarchicalDatasource id="taskDs" class="com.company.scrumit.entity.Task" view="task-tree"
                                hierarchyProperty="task">
            <query>
                <![CDATA[select e from scrumit$Task e ]]>
            </query>
        </hierarchicalDatasource>
    </dsContext>
    <layout
            spacing="true" expand="taskTable">
        <filter id="filter"
                datasource="taskDs"
                useMaxResults="false"/>
        <buttonsPanel id="buttonsPanel"/>
        <treeTable id="taskTable" height="100%" width="100%" textSelectionEnabled="true" aggregatable="true"
                   responsive="true">
            <columns>
                <column id="shortdesc"/>
                <column id="parentBug" link="true" linkScreen="scrumit$Tracker.edit" linkScreenOpenType="NEW_TAB"/>
                <column id="createTs" caption="msg://creationTime"/>
                <column id="begin"/>
                <column id="duration"/>
                <column id="done"/>
                <column id="testingPlan"/>
                <column id="planningTime"/>
                <column id="actualTime"/>
                <column id="control"/>
                <column id="priority"/>
                <column id="realduration"/>
                <column id="type"/>
                <column id="deadline"/>
                <column id="amount"/>
                <column id="ssId"/>
            </columns>
            <rows datasource="taskDs"/>
        </treeTable>
    </layout>
</window>
