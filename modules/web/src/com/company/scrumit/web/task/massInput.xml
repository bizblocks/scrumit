<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.scrumit.web.task.Massinput"
        messagesPack="com.company.scrumit.web.task">
    <dsContext>
        <collectionDatasource id="newTasksDs"
                              class="com.company.scrumit.entity.Task"
                              view="tasks-full">
            <query>
                <![CDATA[select e from scrumit$Task e where (e.createTs IS NULL) ]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="tasksDs"
                              allowCommit="false"
                              class="com.company.scrumit.entity.Task"
                              view="task-top">
            <query>
                <![CDATA[select e from scrumit$Task e where (e.done IS NULL) or (e.done=false)]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="performersDs"
                              class="com.company.scrumit.entity.Performer"
                              view="_local">
            <query>
                <![CDATA[select e from scrumit$Performer e 
]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="add"
                invoke="onAdd"
                shortcut="CTRL-INSERT"/>
        <action id="del"
                invoke="onDel"
                shortcut="CTRL-DELETE"/>
        <action id="commit"
                invoke="onCommit"
                shortcut="CTRL-ENTER"/>
    </actions>
    <dialogMode height="90%"
                width="99%"/>
    <layout expand="tab"
            spacing="true">
        <hbox spacing="true">
            <label align="MIDDLE_LEFT"
                   value="msg://parent"/>
            <lookupPickerField id="parent"
                               optionsDatasource="tasksDs"
                               width="300px"/>
        </hbox>
        <buttonsPanel>
            <button id="btnCreate"
                    action="add"
                    caption="msg://Add"
                    icon="PLUS"/>
            <button id="btnRemove"
                    action="del"
                    caption="msg://Remove"
                    icon="MINUS"/>
            <button id="btnCommit"
                    action="commit"
                    caption="msg://Commit"
                    icon="SAVE"/>
        </buttonsPanel>
        <table id="tab"
               editable="true"
               width="100%">
            <columns>
                <column id="shortdesc"
                        editable="true"/>
                <column id="description"
                        editable="true"/>
                <column id="priority"
                        editable="true"/>
                <column id="type"
                        editable="true"/>
                <column id="begin"
                        editable="true"/>
                <column id="duration"
                        editable="true"/>
                <column id="deadline"
                        editable="true"/>
                <column id="performer"
                        editable="true"
                        optionsDatasource="performersDs"/>
                <column id="parent"/>
            </columns>
            <rows datasource="newTasksDs"/>
        </table>
    </layout>
</window>
