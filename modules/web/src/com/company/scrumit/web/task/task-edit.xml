<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.scrumit.web.task.TaskEdit"
        datasource="taskDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.scrumit.web.task">
    <dsContext>
        <datasource id="taskDs"
                    class="com.company.scrumit.entity.Task"
                    view="tasks-full"/>
        <datasource id="trackerDs"
                    class="com.company.scrumit.entity.Tracker"
                    view="_local"/>
        <collectionDatasource id="performersDs"
                              class="com.company.scrumit.entity.Performer"
                              view="_minimal">
            <query>
                <![CDATA[select e from scrumit$Performer e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="tasksDs"
                              class="com.company.scrumit.entity.Task"
                              view="_minimal">
            <query>
                <![CDATA[select e from scrumit$Task e]]>
            </query>
        </collectionDatasource>
        <datasource id="projectIdentificatorDs" class="com.company.scrumit.entity.ProjectIdentificator"
                    view="projectIdentificator-view"/>
        <collectionDatasource id="taskClassesDs" class="com.company.scrumit.entity.TaskClass" view="taskClass-full">
            <query>
                <![CDATA[select e from scrumit_TaskClass e ]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="auto"
                width="auto"/>
    <layout expand="editBox"
            spacing="true">
        <vbox id="editBox"
              expand="fieldGroupBox"
              margin="false,false,false,true"
              responsive="true"
              spacing="true">
            <scrollBox id="fieldGroupBox"
                       responsive="true">
                <fieldGroup id="fieldGroup"
                            datasource="taskDs"
                            responsive="true">
                    <column width="300px">
                        <field property="id"/>
                        <field property="task"/>
                        <field editable="false" property="done"/>
                        <field property="begin"/>
                        <field property="duration"/>
                        <field property="deadline"/>
                        <field property="shortdesc"/>
                    </column>
                    <column width="300px">
                        <field id="taskClass" property="taskClass" optionsDatasource="taskClassesDs"/>
                        <field property="planningTime"/>
                        <field property="actualTime"/>
                        <field editable="false" property="control"/>
                        <field property="priority"/>
                        <field property="type" id="type"/>
                        <field property="amount"/>
                        <field optionsDatasource="performersDs" property="performer"/>
                    </column>
                </fieldGroup>
            </scrollBox>
            <richTextArea id="description"
                          caption="msg://textDescription"
                          datasource="taskDs"
                          property="description"
                          width="100%"/>
        </vbox>
        <buttonsPanel>
            <button id="btnReady"
                    caption="msg://btnReady"
                    invoke="onBtnReadyClick"
                    stylename="primary"/>
            <frame id="windowActions"
                   screen="editWindowActions"
                   width="AUTO"/>
        </buttonsPanel>
    </layout>
</window>
