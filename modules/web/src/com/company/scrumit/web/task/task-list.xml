<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://tasklist"
        class="com.company.scrumit.web.task.TaskList"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.company.scrumit.web.task">
    <dsContext>
        <hierarchicalDatasource id="tasksDs"
                                class="com.company.scrumit.entity.Task"
                                hierarchyProperty="task"
                                view="task-tree">
            <query>
                <![CDATA[select e from scrumit$Task e]]>
            </query>
        </hierarchicalDatasource>
        <collectionDatasource id="performersDs"
                              class="com.company.scrumit.entity.Performer"
                              view="_minimal">
            <query>
                <![CDATA[select e from scrumit$Performer e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="trackerDs"
                              class="com.company.scrumit.entity.Tracker"
                              view="_full">
            <query>
                <![CDATA[select t from scrumit$Tracker t]]>
            </query>
        </collectionDatasource>
        <datasource id="taskDs"
                    class="com.company.scrumit.entity.Task"
                    view="tasks-full"/>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
        <action id="massInput"
                invoke="onMassInput"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               responsive="true"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="tasksDs">
                    <properties include=".*"/>
                </filter>
                <treeTable id="table"
                           editable="true"
                           multiselect="true"
                           responsive="true"
                           stylename="compact"
                           width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                        <action id="excel"/>
                        <action id="refresh"/>
                    </actions>
                    <columns>
                        <column id="shortdesc"/>
                        <column id="id"
                                caption="ID"/>
                        <column id="priority"/>
                        <column id="done"
                                editable="true"/>
                        <column id="control"
                                editable="true"/>
                        <column id="description"
                                maxTextLength="100"/>
                        <column id="performer"/>
                        <column id="testingPlan"/>
                        <column id="task"/>
                    </columns>
                    <rows datasource="tasksDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  responsive="true">
                        <button id="createBtn"
                                action="table.create"
                                stylename="icon-only"/>
                        <button id="editBtn"
                                action="table.edit"
                                stylename="icon-only"/>
                        <button id="refreshBtn"
                                action="table.refresh"
                                stylename="icon-only"/>
                        <popupButton id="btnsAction"
                                     caption="msg://popupActions"
                                     popupOpenDirection="BOTTOM_RIGHT">
                            <actions>
                                <action id="btnDone" caption="msg://btnReady" icon="font-icon:CHECK"
                                        invoke="onBtnDoneClick"/>
                                <action id="btnChecked" caption="msg://btnChecked" invoke="onBtnChecked"/>
                                <action id="btnHideArchive" caption="msg://hideArchive" invoke="onBtnHideArchive"/>
                            </actions>
                        </popupButton>
                        <button id="btnCreateInGroup"
                                caption="mainMsg://Create in group"
                                invoke="onBtnCreateInGroupClick"/>
                        <button id="excelBtn"
                                action="table.excel"
                                stylename="icon-only"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                        <button id="btnMassInput"
                                action="massInput"
                                caption="mainMsg://Mass input"/>
                        <checkBox id="checkSelect"
                                  caption="Select text"
                                  width="100%"/>
                    </buttonsPanel>
                </treeTable>
            </vbox>
            <vbox id="editBox"
                  height="100%"
                  margin="true"
                  responsive="true"
                  spacing="true">
                <scrollBox height="100%"
                           spacing="true">
                    <fieldGroup id="fieldGroup"
                                datasource="taskDs">
                        <column width="300px">
                            <field property="id"/>
                            <field property="task"/>
                            <field editable="false"
                                   property="done"/>
                            <field property="shortdesc"/>
                            <field property="type"/>
                            <field property="begin"/>
                            <field property="duration"/>
                            <field property="deadline"/>
                            <field property="task"/>
                        </column>
                        <column width="300px">
                            <field property="planningTime"/>
                            <field property="actualTime"/>
                            <field editable="false"
                                   property="control"/>
                            <field property="priority"/>
                            <field property="amount"/>
                            <field optionsDatasource="performersDs"
                                   property="performer"/>
                            <field optionsDatasource="trackerDs"
                                   property="parentBug"/>
                        </column>
                    </fieldGroup>
                    <groupBox caption="msg://description">
                        <richTextArea id="description"
                                      datasource="taskDs"
                                      property="description"
                                      width="100%"/>
                    </groupBox>
                    <grid id="grid"
                          caption="msg://testingPlan"
                          spacing="true"
                          width="100%">
                        <columns>
                            <column flex="3.0"/>
                            <column/>
                        </columns>
                        <rows>
                            <row>
                                <textField id="testingPlan"
                                           datasource="taskDs"
                                           property="testingPlan"
                                           width="100%"/>
                                <button id="okBtn"
                                        caption="OK"
                                        invoke="onOkBtn"/>
                            </row>
                            <row>
                                <label value="msg://com.company.scrumit.entity/Task.task"/>
                                <pickerField datasource="taskDs"
                                             property="task"
                                             width="250px"/>
                            </row>
                        </rows>
                    </grid>
                    <hbox id="actionsPane"
                          align="BOTTOM_RIGHT"
                          spacing="true"
                          visible="false">
                        <button id="saveBtn"
                                action="save"/>
                        <button id="cancelBtn"
                                action="cancel"/>
                    </hbox>
                </scrollBox>
            </vbox>
        </split>
    </layout>
</window>
