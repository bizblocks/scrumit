<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://tasklist"
        class="com.company.scrumit.web.task.Tasklist"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.company.scrumit.web.task">
    <dsContext>
        <datasource id="taskDs"
                    class="com.company.scrumit.entity.Task"
                    view="tasks-full"/>
        <hierarchicalDatasource id="tasksDs"
                                class="com.company.scrumit.entity.Task"
                                hierarchyProperty="task"
                                view="task-tree">
            <query>
                <![CDATA[select e from scrumit$Task e]]>
            </query>
        </hierarchicalDatasource>
        <collectionDatasource id="performersDs"
                              class="com.company.scrumit.entity.Performer"
                              view="_minimal">
            <query>
                <![CDATA[select e from scrumit$Performer e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
        <action id="massInput"
                invoke="onMassInput"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="tasksDs">
                    <properties include=".*"/>
                </filter>
                <treeTable id="table"
                           editable="true"
                           multiselect="true"
                           width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                        <action id="excel"/>
                        <action id="refresh"/>
                    </actions>
                    <columns>
                        <column id="shortdesc"/>
                        <column id="proirity"/>
                        <column id="done"
                                editable="true"/>
                        <column id="control"
                                editable="true"/>
                        <column id="description"
                                maxTextLength="100"/>
                    </columns>
                    <rows datasource="tasksDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="btnCreateInGroup"
                                caption="mainMsg://Create in group"
                                invoke="onBtnCreateInGroupClick"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                        <button id="refreshBtn"
                                action="table.refresh"/>
                        <button id="excelBtn"
                                action="table.excel"/>
                        <button id="btnDone"
                                caption="msg://Done"
                                invoke="onBtnDoneClick"/>
                        <button id="btnMassInput"
                                action="massInput"
                                caption="mainMsg://Mass input"/>
                    </buttonsPanel>
                </treeTable>
            </vbox>
            <vbox id="editBox"
                  expand="description"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="taskDs">
                        <column width="300px">
                            <field caption="mainMsg://Parent"
                                   property="task"/>
                            <field property="done"/>
                            <field property="proirity"/>
                            <field property="begin"/>
                            <field property="duration"/>
                            <field property="deadline"/>
                        </column>
                        <column width="300px">
                            <field property="shortdesc"/>
                            <field property="control"/>
                            <field property="type"/>
                            <field property="amount"/>
                            <field optionsDatasource="performersDs"
                                   property="performer"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
                <richTextArea id="description"
                              datasource="taskDs"
                              property="description"
                              width="100%"/>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
