<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.scrumit.web.tracker.TrackerEdit"
        datasource="trackerDs"
        focusComponent="grid"
        messagesPack="com.company.scrumit.web.tracker"
        wf:actions="bottomPanel"
        xmlns:wf="http://schemas.groupstp.com/wf/0.1/wf-schema.xsd"
        >
    <dsContext>
        <datasource id="trackerDs"
                    class="com.company.scrumit.entity.Tracker"
                    view="_full"/>
        <collectionDatasource id="taskDs"
                              class="com.company.scrumit.entity.Task"
                              view="tasks-full">
            <query>
                <![CDATA[select e from scrumit$Task e where e.type='project']]>
            </query>
        </collectionDatasource>
        <hierarchicalDatasource id="taskParentBugDs"
                                class="com.company.scrumit.entity.Task"
                                hierarchyProperty="task"
                                view="task-tree">
            <query>
                <![CDATA[select e from scrumit$Task e where e.parentBug=:ds$trackerDs]]>
            </query>
        </hierarchicalDatasource>
        <collectionDatasource id="performersDs"
                              class="com.company.scrumit.entity.Performer"
                              view="_minimal"/>
        <collectionDatasource id="filesDs"
                              class="com.company.scrumit.entity.Files"
                              view="files-browser">
            <query>
                <![CDATA[select e from scrumit$Files e where e.entity = :ds$trackerDs.id]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scroll"
            spacing="true">
        <scrollBox id="scroll">
            <grid id="grid"
                  margin="true"
                  spacing="true"
                  width="100%">
                <columns>
                    <column/>
                    <column flex="3.0"/>
                    <column/>
                    <column flex="0.0"/>
                    <column flex="3.0"/>
                    <column/>
                </columns>
                <rows>
                    <row>
                        <label id="ID"
                               value="ID"/>
                        <textField id="textField"
                                   colspan="2"
                                   datasource="trackerDs"
                                   editable="false"
                                   property="id"
                                   width="100%"/>
                        <label value="msg://com.company.scrumit.entity/Tracker.performer"/>
                        <lookupPickerField id="performer"
                                           colspan="2"
                                           datasource="trackerDs"
                                           optionsDatasource="performersDs"
                                           property="performer"
                                           width="100%">
                            <actions>
                                <action id="open"
                                        openType="DIALOG"/>
                                <action id="lookup"
                                        openType="DIALOG"/>
                                <action id="clear"
                                        openType="DIALOG"/>
                            </actions>
                        </lookupPickerField>
                    </row>
                    <row>
                        <label value="msg://Parent"/>
                        <lookupPickerField id="project"
                                           colspan="2"
                                           datasource="trackerDs"
                                           optionsDatasource="taskDs"
                                           property="project"
                                           required="true"
                                           width="100%">
                            <actions>
                                <action id="open"
                                        openType="DIALOG"/>
                                <action id="lookup"
                                        openType="DIALOG"/>
                                <action id="clear"
                                        openType="DIALOG"/>
                            </actions>
                        </lookupPickerField>
                        <label value="msg://trackerPriorityType"/>
                        <lookupField id="priority"
                                     colspan="2"
                                     datasource="trackerDs"
                                     property="trackerPriorityType"
                                     width="100%"/>
                    </row>
                    <row>
                        <label value="msg://shortdesc"/>
                        <textField id="shortdesc"
                                   colspan="2"
                                   datasource="trackerDs"
                                   property="shortdesc"
                                   width="100%"/>
                        <label value="msg://type"/>
                        <lookupField id="type"
                                     colspan="2"
                                     datasource="trackerDs"
                                     property="type"
                                     width="100%"/>
                    </row>
                    <row>
                        <label value="msg://com.company.scrumit.entity/Tracker.stepName"/>
                        <textField colspan="2"
                                   datasource="trackerDs"
                                   editable="false"
                                   property="stepName"
                                   width="100%"/>
                        <label value="msg://testingPlan"/>
                        <textField id="testingPlan"/>
                        <button id="okBtn"
                                caption="OK"
                                invoke="onOkBtn"/>
                    </row>
                    <row>
                        <hbox colspan="6"
                              spacing="true"
                              width="100%">
                            <richTextArea id="description"
                                          caption="msg://description"
                                          datasource="trackerDs"
                                          height="300px"
                                          property="description"
                                          width="100%"/>
                            <table id="filesTable"
                                   caption="msg://Attachments"
                                   height="300px"
                                   width="100%">
                                <actions>
                                    <action id="add"/>
                                    <action id="remove"/>
                                </actions>
                                <columns>
                                    <column id="description"/>
                                </columns>
                                <rows datasource="filesDs"/>
                                <buttonsPanel>
                                    <multiUpload id="multiUpload"
                                                 caption="msg://Upload files"
                                                 icon="UPLOAD"/>
                                    <button caption="msg://download"
                                            icon="DOWNLOAD"
                                            invoke="download"/>
                                    <button action="filesTable.add"
                                            icon="ADD_ACTION"/>
                                    <button action="filesTable.remove"
                                            icon="REMOVE_ACTION"/>
                                </buttonsPanel>
                            </table>
                        </hbox>
                    </row>
                    <row>
                        <hbox colspan="6"
                              spacing="true"
                              width="100%">
                            <treeTable id="tasksTable"
                                       caption="msg://Tasks"
                                       editable="true"
                                       height="300px"
                                       presentations="true"
                                       textSelectionEnabled="true"
                                       width="100%">
                                <actions>
                                    <action id="refresh"/>
                                    <action id="edit"/>
                                    <action id="remove"/>
                                    <action id="excel"/>
                                </actions>
                                <columns>
                                    <column id="shortdesc"/>
                                    <column id="id"/>
                                    <column id="stepName" caption="msg://stage"/>
                                    <column id="status" caption="msg://status"/>
                                    <column id="testingPlan"/>
                                    <column id="planningTime"/>
                                    <column id="actualTime"/>
                                    <column id="done"/>
                                    <column id="control"/>
                                    <column id="priority"/>
                                    <column id="realdurationHours"/>
                                    <column id="type"/>
                                    <column id="description"/>
                                    <column id="deadline"/>
                                    <column id="level"/>
                                    <column id="begin"/>
                                    <column id="duration"/>
                                    <column id="amount"/>
                                    <column id="ssId"/>
                                </columns>
                                <rows datasource="taskParentBugDs"/>
                                <rowsCount/>
                                <buttonsPanel id="buttonsPanel"
                                              alwaysVisible="true">
                                    <button id="createTaskBtn"
                                            caption="msg://createTask"
                                            icon="ADD_ACTION"
                                            invoke="createTask"/>
                                    <button id="createSubTaskBtn"
                                            caption="msg://Creats Subtask"
                                            icon="CLONE"
                                            invoke="onCreateSubTaskBtnClick"/>
                                    <button id="inWorkBtn"
                                            caption="msg://InWork"
                                            icon="PAPER_PLANE"
                                            invoke="onInWorkBtnClick"/>
                                    <button id="refreshTasksBtn"
                                            action="tasksTable.refresh"
                                            icon="REFRESH"
                                            invoke="onRefreshTasksBtnClick"/>
                                    <button id="editTaskBtn"
                                            action="tasksTable.edit"
                                            icon="EDIT_ACTION"/>
                                    <button id="removeTaskBtn"
                                            action="tasksTable.remove"
                                            icon="REMOVE"/>
                                    <button id="excelBtn"
                                            action="tasksTable.excel"
                                            icon="EXCEL_ACTION"/>
                                </buttonsPanel>
                            </treeTable>
                        </hbox>
                    </row>
                    <row>
                        <label value="msg://com.company.scrumit.entity/Tracker.wikiUrl"/>
                        <textField datasource="trackerDs"
                                   property="wikiUrl"
                                   width="250px"/>
                    </row>
                    <row>
                        <label value="msg://com.company.scrumit.entity/Task.task"/>
                        <pickerField datasource="taskParentBugDs"
                                     property="task"
                                     width="250px"/>
                    </row>
                </rows>
            </grid>
        </scrollBox>
        <hbox id="bottomPanel"
              spacing="true"
              stylename="cuba-edit-window-actions">
            <button id="windowCommit"
                    action="windowCommit"
                    align="TOP_CENTER"
                    icon="icons/ok.png"
                    width="100%"/>
            <button id="windowCommitAndClose"
                    action="windowCommitAndClose"
                    align="TOP_CENTER"
                    icon="icons/ok.png"
                    width="100%"/>
            <button id="btnGenerateTasksFromDesc"
                    align="TOP_CENTER"
                    caption="msg://btnGenerate"
                    icon="PLUS"
                    invoke="checkBtnClick"/>
            <button id="windowClose"
                    action="windowClose"
                    align="TOP_CENTER"
                    icon="icons/cancel.png"
                    width="100%"/>
        </hbox>
    </layout>
</window>
