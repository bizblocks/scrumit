<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.scrumit.web.tracker.TrackerEdit"
        datasource="trackerDs"
        focusComponent="grid"
        messagesPack="com.company.scrumit.web.tracker">
    <dsContext>
        <datasource id="trackerDs"
                    class="com.company.scrumit.entity.Tracker"
                    view="_full"/>
        <collectionDatasource id="taskDs"
                              class="com.company.scrumit.entity.Task"
                              view="tasks-full">
            <query>
                <![CDATA[select e from scrumit$Task e where e.type='project']]>
            </query>
        </collectionDatasource>
        <hierarchicalDatasource id="taskParentBugDs"
                                class="com.company.scrumit.entity.Task"
                                hierarchyProperty="task"
                                view="task-tree">
            <query>
                <![CDATA[select e from scrumit$Task e where e.parentBug.id=:ds$trackerDs]]>
            </query>
        </hierarchicalDatasource>
        <collectionDatasource id="performersDs"
                              class="com.company.scrumit.entity.Performer"
                              view="_minimal"/>
        <collectionDatasource id="filesDs"
                              class="com.company.scrumit.entity.Files"
                              view="_local">
            <query>
                <![CDATA[select e from scrumit$Files e where e.entity = :ds$trackerDs.id]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scroll"
            spacing="true">
        <scrollBox id="scroll">
            <grid id="grid"
                  margin="true"
                  spacing="true"
                  width="100%">
                <columns>
                    <column/>
                    <column flex="3.0"/>
                    <column/>
                    <column flex="0.0"/>
                    <column flex="3.0"/>
                    <column/>
                </columns>
                <rows>
                    <row>
                        <label id="ID"
                               value="ID"/>
                        <textField id="textField"
                                   colspan="2"
                                   datasource="trackerDs"
                                   editable="false"
                                   property="id"
                                   width="100%"/>
                        <label value="msg://com.company.scrumit.entity/Tracker.performer"/>
                        <lookupPickerField id="performer"
                                           colspan="2"
                                           datasource="trackerDs"
                                           optionsDatasource="performersDs"
                                           property="performer"
                                           width="100%">
                            <actions>
                                <action id="open"
                                        openType="DIALOG"/>
                                <action id="lookup"
                                        openType="DIALOG"/>
                                <action id="clear"
                                        openType="DIALOG"/>
                            </actions>
                        </lookupPickerField>
                    </row>
                    <row>
                        <label value="msg://Parent"/>
                        <lookupPickerField id="project"
                                           colspan="2"
                                           datasource="trackerDs"
                                           optionsDatasource="taskDs"
                                           property="project"
                                           required="true"
                                           width="100%">
                            <actions>
                                <action id="open"
                                        openType="DIALOG"/>
                                <action id="lookup"
                                        openType="DIALOG"/>
                                <action id="clear"
                                        openType="DIALOG"/>
                            </actions>
                        </lookupPickerField>
                        <label value="msg://trackerPriorityType"/>
                        <lookupField id="priority"
                                     colspan="2"
                                     datasource="trackerDs"
                                     property="trackerPriorityType"
                                     width="100%"/>
                    </row>
                    <row>
                        <label value="msg://shortdesc"/>
                        <textField id="shortdesc"
                                   colspan="2"
                                   datasource="trackerDs"
                                   property="shortdesc"
                                   width="100%"/>
                        <label value="msg://type"/>
                        <lookupField id="type"
                                     colspan="2"
                                     datasource="trackerDs"
                                     property="type"
                                     width="100%"/>
                    </row>
                    <row>
                        <label value="msg://com.company.scrumit.entity/Tracker.stepName"/>
                        <textField colspan="2"
                                   datasource="trackerDs"
                                   editable="false"
                                   property="stepName"
                                   width="100%"/>
                        <label value="msg://testingPlan"/>
                        <textField id="testingPlan"/>
                        <button id="okBtn"
                                caption="OK"
                                invoke="onOkBtn"/>
                    </row>
                    <row>
                        <hbox colspan="6"
                              spacing="true"
                              width="100%">
                            <richTextArea id="description"
                                          caption="msg://description"
                                          datasource="trackerDs"
                                          height="300px"
                                          property="description"
                                          width="100%"/>
                            <table id="filesTable"
                                   caption="msg://Attachments"
                                   height="300px"
                                   width="100%">
                                <actions>
                                    <action id="add"/>
                                    <action id="remove"/>
                                </actions>
                                <columns>
                                    <column id="description"/>
                                </columns>
                                <rows datasource="filesDs"/>
                                <buttonsPanel>
                                    <multiUpload id="multiUpload"
                                                 caption="msg://Upload files"
                                                 icon="UPLOAD"/>
                                    <button caption="msg://download"
                                            icon="DOWNLOAD"
                                            invoke="download"/>
                                    <button action="filesTable.add"
                                            icon="ADD_ACTION"/>
                                    <button action="filesTable.remove"
                                            icon="REMOVE_ACTION"/>
                                </buttonsPanel>
                            </table>
                        </hbox>
                    </row>
                    <row>
                        <hbox colspan="6"
                              spacing="true"
                              width="100%">
                            <treeTable id="tasksTable"
                                       caption="msg://Tasks"
                                       editable="true"
                                       height="300px"
                                       presentations="true"
                                       textSelectionEnabled="true"
                                       width="100%">
                                <actions>
                                    <action id="refresh"/>
                                    <action id="edit"/>
                                    <action id="remove"/>
                                    <action id="excel"/>
                                </actions>
                                <columns>
                                    <column id="shortdesc"
                                            editable="true"/>
                                    <column id="priority"
                                            editable="true"/>
                                    <column id="done"
                                            editable="true"/>
                                    <column id="type"
                                            editable="true"/>
                                    <column id="control"
                                            editable="true"/>
                                    <column id="description"
                                            editable="true"/>
                                    <column id="planningTime"
                                            editable="true"/>
                                    <column id="actualTime"
                                            editable="true"/>
                                </columns>
                                <rows datasource="taskParentBugDs"/>
                                <rowsCount/>
                                <buttonsPanel id="buttonsPanel"
                                              alwaysVisible="true">
                                    <button id="createTaskBtn"
                                            caption="msg://createTask"
                                            icon="ADD_ACTION"
                                            invoke="createTask"/>
                                    <button id="createSubTaskBtn"
                                            caption="msg://Creats Subtask"
                                            icon="CLONE"
                                            invoke="onCreateSubTaskBtnClick"/>
                                    <button id="refreshTasksBtn"
                                            action="tasksTable.refresh"
                                            icon="REFRESH"
                                            invoke="onRefreshTasksBtnClick"/>
                                    <button id="editTaskBtn"
                                            action="tasksTable.edit"
                                            icon="EDIT_ACTION"/>
                                    <button id="removeTaskBtn"
                                            action="tasksTable.remove"
                                            icon="REMOVE"/>
                                    <button id="excelBtn"
                                            action="tasksTable.excel"
                                            icon="EXCEL_ACTION"/>
                                </buttonsPanel>
                            </treeTable>
                        </hbox>
                    </row>
                    <row>
                        <label value="msg://com.company.scrumit.entity/Tracker.wikiUrl"/>
                        <textField datasource="trackerDs"
                                   property="wikiUrl"
                                   width="250px"/>
                    </row>
                    <row>
                        <button id="makeUrlBtn"
                                caption="msg://Make URL"
                                invoke="onMakeUrlBtnClick"/>
                        <textField datasource="trackerDs"
                                   editable="false"
                                   property="url"
                                   width="250px"/>
                    </row>
                </rows>
            </grid>
        </scrollBox>
        <hbox id="bottomPanel"
              spacing="true">
            <frame src="com/company/scrumit/web/frames/actionsEntity.xml"
                   width="AUTO"/>
        </hbox>
    </layout>
</window>
