<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.company.scrumit.web.tracker.TrackerCreate"
        focusComponent="label"
        messagesPack="com.company.scrumit.web.tracker">
    <dsContext>
        <hierarchicalDatasource id="generatedTaskListDS"
                                class="com.company.scrumit.entity.Task"
                                hierarchyProperty="parent"
                                refreshMode="NEVER"/>
        <groupDatasource id="selectedDs"
                         class="com.company.scrumit.entity.Task"
                         refreshMode="NEVER"
                         view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scroll"
            spacing="true">
        <scrollBox id="scroll">
            <vbox margin="true"
                  width="100%">
                <label id="label"
                       align="MIDDLE_LEFT"
                       value="msg://tasksAndSubtasks"
                       width="100%"/>
            </vbox>
            <treeTable id="tasksTable"
                       editable="true"
                       width="765">
                <columns>
                    <column id="shortdesc"
                            editable="true"
                            required="true"/>
                    <column id="deadline"
                            editable="true"
                            required="true"/>
                    <column id="checkBox"
                            caption="msg://saveTasks"/>
                    <!--                        generator="generateCheckBox"/>-->
                    <column id="parent"/>
                </columns>
                <rows datasource="generatedTaskListDS"/>
            </treeTable>
        </scrollBox>
        <hbox id="buttonsBox"
              align="BOTTOM_RIGHT"
              margin="true"
              spacing="true">
            <button id="closeBtn"
                    caption="msg://closeTasks"
                    invoke="closeWindow"/>
            <button id="saveBtn"
                    caption="msg://saveTasks"
                    icon="SAVE"
                    invoke="saveTasks"/>
        </hbox>
    </layout>
</window>
