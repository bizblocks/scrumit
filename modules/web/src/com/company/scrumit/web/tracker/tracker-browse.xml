<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.scrumit.web.tracker.TrackerBrowse"
        focusComponent="trackersTable"
        lookupComponent="trackersTable"
        messagesPack="com.company.scrumit.web.tracker">
    <dsContext>
        <groupDatasource id="trackersDs"
                         class="com.company.scrumit.entity.Tracker"
                         view="_full">
            <query>
                <![CDATA[select e from scrumit$Tracker e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="trackersTable"
            spacing="true">
        <filter id="filter"
                applyTo="trackersTable"
                datasource="trackersDs"
                useMaxResults="false">
            <properties include=".*"/>
        </filter>
        <groupTable id="trackersTable"
                    multiselect="true"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="excel"/>
                <action id="exclude"/>
                <action id="add"/>
                <action id="refresh"/>
            </actions>
            <columns>
                <group>
                    <column id="project"/>
                </group>
                <column id="stepName"/>
                <column id="id"/>
                <column id="createTs"/>
                <column id="shortdesc"/>
                <column id="type"/>
                <column id="statusOld" editable="true"/>
                <column id="description"/>
                <column id="trackerPriorityType" editable="true"/>
                <column id="performer"/>
                <column id="testingPlan"/>
                <column id="status"/>
                <column id="wikiUrl"/>
            </columns>
            <rows datasource="trackersDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          align="MIDDLE_LEFT"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="trackersTable.create"/>
                <button id="editBtn"
                        action="trackersTable.edit"/>
                <button id="removeBtn"
                        action="trackersTable.remove"/>
                <button id="refreshBtn"
                        action="trackersTable.refresh"/>
                <button id="excelBtn"
                        action="trackersTable.excel"/>
                <button id="openDiscussionBtn" caption="msg://openDiscussion" invoke="onOpenDiscussionBtnClick"/>
                <checkBox id="checkSelect"
                          align="MIDDLE_LEFT"
                          caption="msg://Select text"
                          height="100%"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
