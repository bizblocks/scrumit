<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.scrumit.web.tracker.TrackerBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.company.scrumit.web.tracker">
    <dsContext>
        <datasource id="trackerDs"
                    class="com.company.scrumit.entity.Tracker"
                    view="_full"/>
        <groupDatasource id="trackersDs"
                         class="com.company.scrumit.entity.Tracker"
                         view="_full">
            <query>
                <![CDATA[select e from scrumit$Tracker e]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="taskDs"
                              class="com.company.scrumit.entity.Task"
                              view="tasks-full">
            <query>
                <![CDATA[select e from scrumit$Task e where e.type=:custom$project]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="trackersDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="shortdesc"/>
                        <column id="type"/>
                        <column id="description"/>
                        <column id="file"/>
                        <column id="status"/>
                        <column id="trackerPriorityType"/>
                    </columns>
                    <rows datasource="trackersDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <scrollBox id="fieldGroupBox">

                    <lookupPickerField id="project"
                                       datasource="trackerDs"
                                       optionsDatasource="taskDs"
                                       property="project"
                                       caption="msg://Parent"
                                       width="100%">
                        <actions>
                            <action id="createTask" invoke="createTask"
                                    icon="icons/create.png" shortcut="ALT-C" openType="DIALOG"/>
                            <action id="open" openType="DIALOG"/>
                            <action id="lookup" openType="DIALOG"/>
                            <action id="clear" openType="DIALOG"/>
                        </actions>
                    </lookupPickerField>
                    <vbox width="100%" height="5px"/>
                    <fieldGroup id="fieldGroup"
                                datasource="trackerDs">
                       <column width="210px">
                            <field property="shortdesc" required="true"/>
                            <field property="file"/>
                       </column>
                        <column width="210px">
                            <field property="status"/>
                            <field property="trackerPriorityType"/>
                        </column>
                    </fieldGroup>
                    <vbox width="100%" height="5px"/>
                    <richTextArea property="description"
                                  datasource="trackerDs"
                                  width="100%"
                                  caption="msg://description" />
                </scrollBox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
